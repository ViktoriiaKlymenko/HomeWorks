@model EntityFrameworkTask.Product

@using (Html.BeginForm($"Create", "Product", FormMethod.Post))
{
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th colspan="2" align="center">Create product</th>
        </tr>
        <tr>
            <td>Name: </td>
            <td>
                @Html.TextBoxFor(m => m.Name)
                @Html.ValidationMessageFor(m => m.Name)
            </td>
        </tr>
        <tr>
            <td>Price: </td>
            <td>
                @Html.TextBoxFor(m => m.Price)
                @Html.ValidationMessageFor(m => m.Price)
            </td>
        </tr>
        <tr>
            <td>Amount: </td>
            <td>
                @Html.TextBoxFor(m => m.Amount)
                @Html.ValidationMessageFor(m => m.Amount)
            </td>
        </tr>
        <tr>
            <td>Weight: </td>
            <td>
                @Html.TextBoxFor(m => m.Weight)
                @Html.ValidationMessageFor(m => m.Weight)
            </td>
        </tr>
        <tr>
            <td>Provider: </td>
            <td>
                @Html.DropDownListFor(m => m.Provider.Id, new SelectList(ViewBag.Providers, "Id", "Name"))
            </td>
        </tr>
        <tr>
            <td>Category: </td>
            <td>
                @Html.DropDownListFor(m => m.Category.Id, new SelectList(ViewBag.Categories, "Id", "Name"))
            </td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Submit" /></td>
        </tr>
    </table>
}